<Window x:Class="LocalDatabase_Server.Users.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalDatabase_Server.Users"
        mc:Ignorable="d"
        Title="Users" Height="450" Width="800">
    <Grid>
        <ListView HorizontalAlignment="Left" Height="350" Margin="24,21,0,0" VerticalAlignment="Top" Width="750">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock x:Name="idText" Text=""/>
                        <TextBlock x:Name="surname" Text=""/>
                        <TextBlock x:Name="name" Text=""/>
                        <TextBlock x:Name="login" Text=""/>
                        <TextBlock x:Name="token" Text=""/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
